    "version": "0.2.0",
    "configurations": [
        {
            "name": "Operator Local",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "WATCH_NAMESPACE": "ns-custom,monitoring",
            },
            "args": ["--zap-time-encoding=rfc3339"]
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",            
            "env": {
                "KUBEBUILDER_ASSETS": "${workspaceFolder}/bin/k8s/1.25.0-darwin-amd64",
            }
        }
    ]
}